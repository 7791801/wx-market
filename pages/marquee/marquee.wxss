.index-hd {
  padding: 80rpx;
  text-align: center;
  padding: 20rpx 26rpx 40rpx;
}

.index-desc {
  margin-top: 20rpx;
  color: #888888;
  font-size: 28rpx;
}

button{
  margin-top: 40rpx;
  width: 400rpx;
}

.marquee_wp{
  margin: 0 20rpx;
  display: flex;
  flex-wrap: wrap;
}

.marquee_wp .marquee_item{
  width: 230rpx;
  height: 230rpx;
  margin: 0 10rpx 10rpx 0;
  opacity: .8;
  background: #1E9FD9;
}

.marquee_wp .marquee_item.on{
  opacity: 1;
}

.marquee_wp .marquee_item image{
  display: block;
  width: 100%;
  height: 100%;
}

.marquee_wp .marquee_item:nth-child(3n){
  margin-right: 0;
}


